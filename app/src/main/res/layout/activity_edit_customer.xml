<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="vertical">

        <include layout="@layout/layout_custom_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Project Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <Spinner
                android:id="@+id/spProject"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/spinner_drawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Surname"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="Surname"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="First Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etFname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="First Name"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Last Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etLName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="Last Name"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_date"
                android:focusable="false"
                android:hint="Date"
                android:maxLines="1"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="City"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="City"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="BHK"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etBhk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="BHK"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="Mobile"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Whatsapp"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etWtsup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="Whatsapp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Type"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <Spinner
                android:id="@+id/spType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/spinner_drawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <Spinner
                android:id="@+id/spStatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/spinner_drawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Remarks"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etRemarks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="Remarks"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Visit Reason"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etVisitReason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_drawable"
                android:hint="Visit Reason"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_blue">

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Add"
                    android:textColor="#fff"
                    android:textSize="@dimen/_13ssp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>